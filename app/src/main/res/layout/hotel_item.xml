<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    card_view:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_item_project_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="H O T E L"
            android:textSize="16sp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/hotel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:text="Omash Manis"
            card_view:layout_constraintStart_toStartOf="@+id/tv_item_project_name"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_item_project_name" />

        <ImageView
            android:id="@+id/lang_ic"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/ic_location"
            card_view:layout_constraintStart_toStartOf="@+id/hotel_name"
            card_view:layout_constraintTop_toBottomOf="@+id/hotel_name"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/location"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Makassar, Kec. Tamalanrea Jl. Perintis"
            android:textSize="12sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/lang_ic"
            card_view:layout_constraintStart_toEndOf="@+id/lang_ic"
            card_view:layout_constraintTop_toTopOf="@+id/lang_ic"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/idr_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="IDR"
            android:textStyle="bold"
            android:layout_marginTop="7dp"
            android:textSize="12sp"
            card_view:layout_constraintStart_toStartOf="@+id/lang_ic"
            card_view:layout_constraintTop_toBottomOf="@+id/lang_ic"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="@+id/idr_txt"
            card_view:layout_constraintStart_toEndOf="@+id/idr_txt"
            card_view:layout_constraintTop_toTopOf="@+id/idr_txt"
            tools:ignore="MissingConstraints"
            android:layout_marginStart="5dp"
            android:text="570.000" />

        <ImageView
            android:id="@+id/star"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/ic_star"
            card_view:layout_constraintBottom_toBottomOf="@+id/price"
            card_view:layout_constraintStart_toEndOf="@+id/price"
            card_view:layout_constraintTop_toTopOf="@+id/price"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="@+id/star"
            card_view:layout_constraintStart_toEndOf="@+id/star"
            card_view:layout_constraintTop_toTopOf="@+id/star"
            tools:ignore="MissingConstraints"
            android:text="12.7k" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>